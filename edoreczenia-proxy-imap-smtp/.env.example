# ===========================================
# E-Doręczenia Proxy IMAP/SMTP - Konfiguracja
# ===========================================

# OAuth2 / Autoryzacja e-Doręczeń
EDORECZENIA_CLIENT_ID=your_client_id
EDORECZENIA_CLIENT_SECRET=your_client_secret
EDORECZENIA_TOKEN_URL=https://edoreczenia-api.gov.pl/oauth/token
EDORECZENIA_API_BASE_URL=https://edoreczenia-api.gov.pl/ua/v5

# Adres e-Doręczeń
EDORECZENIA_ADDRESS=AE:PL-12345-67890-ABCDE-12

# Serwer IMAP (lokalny proxy)
IMAP_HOST=0.0.0.0
IMAP_PORT=1143
IMAP_SSL_PORT=1993
IMAP_SSL_CERT=/path/to/cert.pem
IMAP_SSL_KEY=/path/to/key.pem

# Serwer SMTP (lokalny proxy)
SMTP_HOST=0.0.0.0
SMTP_PORT=1025
SMTP_SSL_PORT=1465
SMTP_SSL_CERT=/path/to/cert.pem
SMTP_SSL_KEY=/path/to/key.pem

# Autoryzacja lokalna IMAP/SMTP
LOCAL_AUTH_USERNAME=edoreczenia
LOCAL_AUTH_PASSWORD=secure_password_here

# Logowanie
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Debug
DEBUG=false

# ===========================================
# E-Doręczenia Middleware Sync - Konfiguracja
# ===========================================

# Porty Docker (zewnętrzne)
SIMULATOR_PORT=8280
DOVECOT_PORT=21143
WEBMAIL_PORT=9180

# OAuth2 / Autoryzacja e-Doręczeń
# Dla testów z symulatorem:
#EDORECZENIA_TOKEN_URL=http://edoreczenia-simulator:8080/oauth/token
#EDORECZENIA_API_BASE_URL=http://edoreczenia-simulator:8080/ua/v5
# Dla produkcji:
EDORECZENIA_CLIENT_ID=your_client_id
EDORECZENIA_CLIENT_SECRET=your_client_secret
EDORECZENIA_TOKEN_URL=https://edoreczenia-api.gov.pl/oauth/token
EDORECZENIA_API_BASE_URL=https://edoreczenia-api.gov.pl/ua/v5

# Adres e-Doręczeń
EDORECZENIA_ADDRESS=AE:PL-12345-67890-ABCDE-12

# Docelowy serwer IMAP (np. Dovecot)
TARGET_IMAP_HOST=localhost
TARGET_IMAP_PORT=993
TARGET_IMAP_SSL=true
TARGET_IMAP_USERNAME=edoreczenia@example.com
TARGET_IMAP_PASSWORD=secure_password

# Docelowy serwer SMTP (do wysyłania z IMAP)
TARGET_SMTP_HOST=localhost
TARGET_SMTP_PORT=587
TARGET_SMTP_SSL=true
TARGET_SMTP_USERNAME=edoreczenia@example.com
TARGET_SMTP_PASSWORD=secure_password

# Synchronizacja
SYNC_INTERVAL_MINUTES=5
SYNC_BATCH_SIZE=50
SYNC_DIRECTION=bidirectional
# Możliwe wartości: incoming, outgoing, bidirectional

# Folder mapowania
FOLDER_MAPPING_INBOX=INBOX/e-Doreczenia
FOLDER_MAPPING_SENT=Sent/e-Doreczenia
FOLDER_MAPPING_OUTBOX=Drafts/e-Doreczenia-Wyslij

# Baza danych (śledzenie synchronizacji)
DATABASE_URL=sqlite:///./sync_state.db

# Logowanie
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/edoreczenia-sync/sync.log

# Powiadomienia (opcjonalne)
NOTIFY_EMAIL=admin@example.com
NOTIFY_ON_ERROR=true
NOTIFY_ON_SUCCESS=false

# Debug
DEBUG=false

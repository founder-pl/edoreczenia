# Szyfromat.pl - e-Doręczenia SaaS
# Konfiguracja środowiska lokalnego

# Domena
SZYFROMAT_DOMAIN=szyfromat.pl

# Porty (lokalne środowisko)
BACKEND_PORT=8500
FRONTEND_PORT=3500

# JWT
JWT_SECRET=szyfromat-secret-key-change-in-production

# Baza danych
DATABASE_URL=sqlite:////data/szyfromat.db

# Integracja z IDCard.pl
IDCARD_API_URL=http://idcard-backend:4000

# API e-Doręczeń (proxy)
PROXY_API_URL=http://host.docker.internal:8180
SYNC_API_URL=http://host.docker.internal:8280
DSL_API_URL=http://host.docker.internal:8380

# Klucze API e-Doręczeń
EDORECZENIA_CLIENT_ID=your_client_id
EDORECZENIA_CLIENT_SECRET=your_client_secret
